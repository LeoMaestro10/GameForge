@model GameForge.Models.GameVersion
@{
    ViewData["Title"] = "Delete Version";
}

<h2>Delete Version</h2>
<p>Are you sure you want to delete this version?</p>

<dl class="row">
    <dt class="col-sm-2">Version Number</dt>
    <dd class="col-sm-10">@Model.VersionNumber</dd>

    <dt class="col-sm-2">Release Date</dt>
    <dd class="col-sm-10">@Model.ReleaseDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-gameId="@Model.GameId" class="btn btn-secondary">Cancel</a>
</form>
