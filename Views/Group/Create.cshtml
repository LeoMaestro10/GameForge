@model string

<h2>Create a New Group</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<form asp-action="CreateGroup" method="post">
    <div class="form-group">
        <label for="groupName">Group Name</label>
        <input type="text" id="groupName" name="groupName" class="form-control" placeholder="Enter group name" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Create Group</button>
</form>

<a class="btn btn-secondary mt-3" href="@Url.Action("ManageGroups", "Groups")">Back to Manage Groups</a>
